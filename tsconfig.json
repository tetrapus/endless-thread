{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "esnext",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "types": ["gapi", "gapi.auth2", "gapi.client", "gapi.client.gmail", "node"],
        "plugins": [
            { "transform": "ts-optchain/transform" },
        ]
    },
    "include": [
        "./src/**/*"
    ]
}
